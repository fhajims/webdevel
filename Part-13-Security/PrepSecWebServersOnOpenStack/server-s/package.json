{
  "name": "server-n",
  "version": "1.0.0",
  "description": "The Nice (normal) TypeScript Server",
  "main": "index.js",
  "scripts": {
    "build": "node_modules/typescript/bin/tsc --build",
    "copyfiles": "cp ./src/serverapp/config.json ./dist/serverapp/config.json",
    "linklog": "ln -sf ../../log.txt public/static/logs",
    "linkclientlogic": "ln -sf ../../dist/clientapp/ public/static/js",
    "serve": "npm run linkclientlogic && npm run linklog && nodemon --watch ./src --ext ts --exec ts-node ./src/serverapp/",
    "start": "npm run copyfiles && npm run linkclientlogic && npm run linklog && node ./dist/serverapp",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "fhj",
  "license": "ISC",
  "dependencies": {
    "tsc": "^2.0.4",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/ws": "^8.5.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
